$ const { content} = input;

<if(content.linkText && content.linkUrl)>
  <tr>
    <td align="left" valign="middle" style="font-size: 15px;line-height: 23px;color: #202022;font-weight: 400;">
        &bull;  <a href=content.linkUrl>${content.linkText}</a>
    </td>
  </tr>
</if>
<else-if(content.body)>
  <tr>
    <td align="left" valign="middle" style="font-size: 15px;line-height: 23px;color: #202022;font-weight: 400;">
        $!{content.body}
    </td>
  </tr>
</else-if>
